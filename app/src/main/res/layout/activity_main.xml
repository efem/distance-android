<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ovh.eleet.distance.MainActivity"
    android:id="@+id/mainRelLay">

    <TableLayout
        android:id="@+id/topTableLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/trDateHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDateHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/trDateHeadString" />
            <TextView
                android:id="@+id/tvDistanceHeadHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/trDistanceHeadString" />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topTableLay">

        <LinearLayout
            android:id="@+id/LinLay"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/ic_info_outline_black_24px"
        app:layout_anchor="@id/mainRelLay"
        app:layout_anchorGravity="bottom|right|end"/>

</RelativeLayout>
